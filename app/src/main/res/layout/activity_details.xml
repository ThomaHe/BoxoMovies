<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.DetailsActivity">

    <TextView
        android:id="@+id/details_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        tools:text="Titre du film"/>

    <ImageView
        android:id="@+id/details_movie_poster"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/details_movie_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="12dp"
        android:contentDescription="@string/poster_description"/>

    <TextView
        android:id="@+id/details_released_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/details_movie_poster"
        app:layout_constraintRight_toLeftOf="@+id/details_released_date"
        app:layout_constraintTop_toBottomOf="@id/details_movie_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="@string/release_date"/>
    <TextView
        android:id="@+id/details_released_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/details_released_label"
        app:layout_constraintLeft_toRightOf="@+id/details_released_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_movie_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="4dp"
        tools:text="20/01/19"/>
    <TextView
        android:id="@+id/details_critics_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/details_movie_poster"
        app:layout_constraintRight_toLeftOf="@+id/details_critics_rating"
        app:layout_constraintTop_toBottomOf="@id/details_released_label"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="@string/critics"/>
    <RatingBar
        android:id="@+id/details_critics_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="2.5"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintLeft_toRightOf="@+id/details_critics_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/details_critics_label"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/details_viewers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/details_movie_poster"
        app:layout_constraintRight_toLeftOf="@+id/details_viewers_rating"
        app:layout_constraintTop_toBottomOf="@id/details_critics_label"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="@string/viewers"/>
    <RatingBar
        android:id="@+id/details_viewers_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="5"
        app:layout_constraintLeft_toRightOf="@+id/details_viewers_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_critics_rating"
        app:layout_constraintBaseline_toBaselineOf="@id/details_viewers_label"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/detail_review_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_movie_poster"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/review"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <RatingBar
        android:id="@+id/details_review_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_review_label" />

    <TextView
        android:id="@+id/details_synopsis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_review_rating"
        android:layout_margin="12dp"
        android:text="@string/synopsis"/>
    <TextView
        android:id="@+id/details_synopsis_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_synopsis_label"
        android:padding="8dp"
        tools:text="Six strangers find themselves in a maze of deadly mystery rooms and must use their wits to survive"/>

    <TextView
        android:id="@+id/details_casting_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_synopsis_data"
        android:layout_margin="12dp"
        android:text="@string/casting"/>
    <TextView
        android:id="@+id/details_casting_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_casting_label"
        android:padding="8dp"
        tools:text="Taylor Russell, Logan Miller, Jay Ellis, Tyler Labine"/>



</androidx.constraintlayout.widget.ConstraintLayout>